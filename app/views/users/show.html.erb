<div class="div_wrapper">
    
    <div class="avatarUser">
      <% if @user.avatar? %>  <!-- アップロード画像がある場合に実行する -->
        <%= image_tag @user.avatar.url, style: "object-fit:cover;", width: "100", height: "100", class: "rounded-circle" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
      <% end %>
    </div>
      
      <div class="username">
        <%= @user.username %>
      </div>

      <%= link_to edit_user_path(@user) do %>
        <p>プロフィールを編集</p>
      <% end %>





      <div class="UserProfile">
        <%= @user.profile %>
      </div>
  <% @illusts.each do |i| %>
    <div class="ImageUser">
      <%= link_to illust_path(i) do %>
        <% if i.image? %>  <!-- アップロード画像がある場合に実行する -->
          <%= image_tag i.image.url, class: "IMGIllust", width: "184", height: "184" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
        <% end %>
      <% end %>
    </div>

    <%= i.title %>
  <% end %>
</div>