


<div class="div_wrapper">
  <div class="div_flex">
    <main class="main_wrapper">
      <% if @illust.image? %>  <!-- アップロード画像がある場合に実行する -->
        <%= image_tag @illust.image.url, class: "img_illust" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
      <% end %>

      <div class="aside_wrap_main">
        <div class="current_user">
            <%= link_to user_path(@user), class: "AVATARUSERC", data: {"turbolinks" => false} do %>
              <% if @user.avatar? %>  <!-- アップロード画像がある場合に実行する -->
                <%= image_tag @user.avatar.url, style: "object-fit:cover;", width: "70", height: "70", class: "rounded-circle" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
              <% end %>
                
                  <%= @user.username %>
               
            <% end %>
            <%= link_to "プロフィールを編集", edit_user_path(@user), style: "margin-left: 20px;", class: "Edit_profile", data: {"turbolinks" => false} %>
              
        </div>

        <div class="illust_index">
          <%= @illust.title %>
          <%= simple_format @illust.body %>
        </div>
        
        <div class="edit-delete_wrapper">
          <% if @illust.user.id === current_user.id %>
            <%= link_to edit_illust_path(@illust), class: "btn btn-primary", data: {"turbolinks" => false} do %>
               この作品を編集する
            <% end %>
            <%= link_to illust_path(@illust), method: :delete, class: "btn btn-danger", data: {"turbolinks" => false}, data: {confirm: "削除しますか？"} do %>
              この作品を削除する
            <% end %>
          <% end %>
        </div>
      
        <ul class="ul_Wrap">
          <% @illusts.each do |illust| %>
            <li class="li_ImageW">
              <div class="ImageUser">
                <%= link_to illust_path(illust), data: {"turbolinks" => false} do %>
