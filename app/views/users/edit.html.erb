<div  class="div_wrapper">
  <%= form_for @user do |f| %>
    <div class="Illust_New_wrapper">

          <div class="field">
            <div><%= f.label :avatar, class: "label" %></div>
            <div><%= f.file_field :avatar, class: "input" %></div>
          </div>
 
          <div class="field">
            <div><%= f.label :username, "ユーザー名", class: "label" %></div>
            <div><%= f.text_field :username, class: "input" %></div>
          </div>

          <div class="field">
            <div><%= f.label :profile, "プロフィール", class: "label" %></div>
            <div><%= f.text_area :profile, class: "textarea" %></div>
          </div>

          <div class="field">
            <%= f.submit '編集を完了', class: 'btn btn-primary' %>
          </div>
    </div>
  <% end %>
</div>