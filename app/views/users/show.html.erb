

<div class="div_wrapper">

  <div class="UserPwrap">
    <div class="Usrwrp">
      <div class="USERWRAPPER">
        <div class="avatarUser">
          <% if @User.avatar? %>  <!-- アップロード画像がある場合に実行する -->
            <%= image_tag @User.avatar.url, class: "rounded-circle", id: "useravatar" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
          <% end %>
        </div>
        
        <div class="userNaFW">
          <div class="FlexUserNaFW">
            <div class="username">
              <%= @User.username %>
            </div>
              <div class="FolWrap">
                <div class="follow">
                  <%= link_to following_user_path(@User.id), data: {"turbolinks" => false} do %>
                    <h6 style="color: #dbdbdb;">フォロー<%= @User.following.count %>人</h6>
                  <% end %>
                </div>
                <div class="follower">
                  <%= link_to followers_user_path(@User.id), data: {"turbolinks" => false} do %>
                    <h6  style="color: #dbdbdb;">フォロワー<%= @User.followers.count %>人</h6>
                  <% end %>
                </div>
              </div>
          </div>
        </div>
          <div class="follow_form">
              <%= render "follow_form" %>
          </div>
          <% if @User.id == current_user.id %>
            <%= link_to edit_user_path(@User),style: "margin: auto 10px;", data: {"turbolinks" => false} do %>
              <div class="Edit_profile">
                <div class="EditProfile">
                  プロフィールを編集
                </div>
              </div>
            <% end %>
          <% end %>
       
      </div>
    </div>
  </div>





    <div style="color: white;">作品数：<%= @User.illusts.count %></div>
    <!--タブ-->
    <ul class="tab-group">
      <li class="tab is-active">プロフィール</li>
      <li class="tab">イラスト</li>
    </ul>

    <!--タブを切り替えて表示するコンテンツ-->
    <div class="panel-group">
      <%#A%>
      <div class="panel is-show">
        <div class="UserProfile">
          <%= @User.profile %>
        </div>
      </div>

      <%#B%>
      <div class="panel">
        <ul class="ul_Wrap">
          <% @User.illusts.each do |i| %>
            <li class="li_ImageW">
              <div class="ImageUser">
                <%= link_to illust_path(i), data: {"turbolinks" => false} do %>
                  <% if i.image? %>  <!-- アップロード画像がある場合に実行する -->
                    <%= image_tag i.image.url, class: "IMGIllust", width: "184", height: "184" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
                  <% end %>
                <% end %>
              </div>
              <div class="Illust_index">
                <%= link_to illust_path(i), style: "color: white;", data: {"turbolinks" => false} do %>
                  <%= i.title %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

</div>