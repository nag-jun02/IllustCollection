


<div  class="div_wrapper">
    <div id="CARD" class="card">
      <div style="font-size: 25px;" class="card-header">
        ユーザー一覧
      </div>
      <ul class="list-group list-group-flush">
        <div class="users">
          <% @users.each do |user| %>
            <li id="liGroup" class="list-group-item">
              <div class="current_user">
                <%= link_to user_path(user), class: "AVATARUSERCUR", data: {"turbolinks" => false} do %>
                  <% if user.avatar? %>  <!-- アップロード画像がある場合に実行する -->
                    <%= image_tag user.avatar.url,id: "IMAGEAVTS", class: "rounded-circle" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
                  <% end %>
                  <%= user.username %>
                <% end %>
              </div>
            </li>
          <% end %>
        </div>
      </ul>
    </div>
</div>

