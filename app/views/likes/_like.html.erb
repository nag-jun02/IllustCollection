<div class="like-link" id="like-link-<%= illust.id %>">
  <% if current_user.likes.find_by(illust_id: illust.id) %>
    <%= link_to unlike_path(illust.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️<%= illust.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(illust.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️<%= illust.likes.count %></div>
    <% end %>
  <% end %>
</div>